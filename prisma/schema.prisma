generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // Connection string to your PostgreSQL DB
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  mail       String   @unique
  facultyId  String   @unique
  password   String
  verifyOTP  String?
  isVerified Boolean  @default(false)
  department String
  // subscribed Json[]  @default([])
  messages   Message[] 
}

enum Status{
  Read
  Delivered
  Undelivered
}
model Message {
  id        Int      @id @default(autoincrement())
  channel   String   
  senderId  Int      
  sender    User     @relation(fields: [senderId], references: [id])
  content   String   
  timestamp DateTime @default(now())
  status    Status   @default(Undelivered)
}
